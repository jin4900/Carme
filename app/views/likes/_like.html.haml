- if user_signed_in?
  - if @post.like_user(current_user.id)
    = button_to post_like_path(@like, id: params[:id], post_id: @post.id), method: :delete, id: "likes-buttons", remote: true do
      %i.fas.fa-heart.unlike-btn
      %span
        = @post.likes_count
  - else
    = button_to post_likes_path(@post, id: params[:id],), id: "likes-buttons", remote: true do
      %i.far.fa-heart.like-btn
      %span
        = @post.likes_count
- else
  %i.far.fa-heart
  %span
    = @post.likes_count

