.header
  .top
    .grid-6
      = link_to "Carme", root_path, class: 'toplink'
    - if user_signed_in?
      .user_nav
        .user_name
          %span
            = current_user.nickname
        %ul.user__info
          %li
            = link_to "マイページ", "/users/#{current_user.id}", class: 'page'
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'page'
            = link_to "投稿する", "/posts/new", class: 'page' 
    - else
      .grid-6
        = link_to "ログイン", new_user_session_path, class: 'post'
        = link_to "新規登録", new_user_registration_path, class: 'post'